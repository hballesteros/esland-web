---
import Layout from '@/layouts/Layout.astro'
import HeroContainer from '@/components/HeroContainer.astro'
import { getI18N } from '@/i18n/'
import Button from '../Button.astro'
import Numeros from '../Numeros.astro'

const { currentLocale } = Astro
const i18n = getI18N({currentLocale})
---

<Layout title={i18n.SEO.ARCHIVO_TITLE} description={i18n.SEO.ARCHIVO_DESCRIPTION}>
    <HeroContainer img="/archivo-background.webp">
        <h1
          class="lg:text-5xl text-4xl text-center uppercase mb-20 font-tomaso tracking-widest"
        >
          {i18n.ARCHIVO.HERO_TITLE}
        </h1>
    
        <Button
          class="animate-fade-up uppercase"
          url="https://www.youtube.com/watch?v=1YmpPrqKP-g"
        >
          {i18n.ARCHIVO.HERO_BUTTON}
        </Button>
      </HeroContainer>

      <main class="pb-24">
        <Numeros i18n={i18n} />
      </main>
</Layout>